<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageDrawActivity">

    <ImageView
        android:id="@+id/imageViewAva_1"
        android:layout_width="142dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ava_1"
        android:focusable="true"
        android:clickable="true"
        android:onClick="ImgClick_1"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewAva_2"
        android:layout_width="142dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ava_2"
        android:focusable="true"
        android:clickable="true"
        android:onClick="ImgClick_2"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/imageViewAva_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewAva_3"
        android:layout_width="142dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="36dp"
        android:focusable="true"
        android:clickable="true"
        android:onClick="ImgClick_3"
        android:src="@drawable/ava_3"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAva_1" />
</androidx.constraintlayout.widget.ConstraintLayout>