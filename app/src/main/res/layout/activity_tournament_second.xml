<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentActivitySecond">


    <!-- app:srcCompat="@drawable/golden_cup"-->

    <ImageView
        android:id="@+id/imageViewTour2"
        android:layout_width="220dp"
        android:layout_height="189dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTourDescription"
        android:layout_width="219dp"
        android:layout_height="91dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTour2" />

    <TextView
        android:id="@+id/textViewTourDate"
        android:layout_width="108dp"
        android:layout_height="24dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourDescription" />

    <TextView
        android:id="@+id/textViewTourPeopleCount"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:clickable="true"
        android:onClick="onClickCountPeop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewKolvoUchast" />

    <Button
        android:id="@+id/buttonTourJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        android:text="Вступить"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourPeopleCount" />

    <TextView
        android:id="@+id/textViewKolvoUchast"
        android:layout_width="181dp"
        android:layout_height="23dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:text="Количество участников:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourDate" />


</androidx.constraintlayout.widget.ConstraintLayout>