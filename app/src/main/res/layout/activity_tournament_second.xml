<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentActivitySecond">


    <ImageView
        android:id="@+id/imageViewTour2"
        android:layout_width="220dp"
        android:layout_height="189dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <!-- app:srcCompat="@drawable/golden_cup"-->

    <TextView
        android:id="@+id/textViewTourDescription"
        android:layout_width="219dp"
        android:layout_height="91dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTour2" />

    <TextView
        android:id="@+id/textViewTourDate"
        android:layout_width="108dp"
        android:layout_height="24dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourDescription" />

    <TextView
        android:id="@+id/textViewTourPeopleCount"
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTourDate" />

    <Button
        android:id="@+id/buttonTourJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="16dp"
        android:text="Вступить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>